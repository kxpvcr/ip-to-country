{
    "extends": [
        "eslint:recommended",
        "plugin:node/recommended",
        "plugin:security/recommended"
    ],
    "env": {
        "es6": true,
        "node": true
    },
    "plugins": ["node", "security"],
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true,
            "sourceType": "module",
            "allowImportExportEverywhere": false
        }
    },
    "rules": {
        "strict": 2,
        "space-unary-ops": 2,
        "max-params": [2, { "max": 7}],
        "max-depth": [2, { "max": 3}],
        "max-len": [1, { "code": 130, "ignoreStrings": true, "ignoreRegExpLiterals": true }],
        "max-statements": [1, { "max": 36 }],
        "complexity": [1, { "max": 9 }],
        "no-console": 1,
        "no-use-before-define": 1,
        "no-bitwise": 2,
        "camelcase": 2,
        "semi": [2, "never"],
        "no-extra-semi": 2,
        "no-mixed-spaces-and-tabs": 2,
        "no-duplicate-case": 2,
        "no-cond-assign": 2,
        "no-constant-condition": 2,
        "no-dupe-args": 2,
        "no-dupe-keys": 2,
        "no-alert": 2,
        "no-empty": 2,
        "no-empty-character-class": 2,
        "no-ex-assign": 2,
        "no-func-assign": 2,
        "no-invalid-regexp": 2,
        "no-irregular-whitespace": 2,
        "no-regex-spaces": 2,
        "no-unexpected-multiline": 2,
        "no-unreachable": 2,
        "valid-typeof": 2,
        "accessor-pairs": 2,
        "curly": 2,
        "default-case": 2,
        "eqeqeq": 2,
        "guard-for-in": 2,
        "no-empty-function": 2,
        "block-spacing": 2,
        "comma-spacing": 2,
        "comma-style": 2,
        "no-multiple-empty-lines": [2, { "max": 2, "maxBOF": 0, "maxEOF": 1}],
        "quotes": [2, "single", { "avoidEscape": true }],
        "indent": [1, 4, {
            "MemberExpression": "off",
            "SwitchCase": 1
        }],
        "getter-return": [2, {"allowImplicit": true}]
    }
}
